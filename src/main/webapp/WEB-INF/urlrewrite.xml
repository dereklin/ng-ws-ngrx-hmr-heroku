<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">

<!--

    Configuration file for UrlRewriteFilter
    http://www.tuckey.org/urlrewrite/

-->
<urlrewrite>
	<!-- 
    <rule>
        <note>
            The rule means that requests to /test/status/ will be redirected to /rewrite-status
            the url will be rewritten.
        </note>
        <from>/say</from>
        <to type="passthrough" last="true">/rewrite.cfm/</to>
    </rule>
	-->
	
<rule>
		<condition type="request-uri" operator="notequal">
^/(flex2gateway|jrunscripts|cfide|cfformgateway|railo-context|admin-context|files|images|javascripts|miscellaneous|stylesheets|public|rewrite.cfm|index.cfm)
		</condition>
    	<from>^/(.*)$</from>
		<to type="passthrough" last="true">/rewrite.cfm/$1</to>
 	</rule>

</urlrewrite>

